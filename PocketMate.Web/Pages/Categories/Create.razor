@page "/categories/add"
@inherits CreateCategoryPage

<MudText Typo="Typo.h3">New category</MudText>
<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnSubmit="OnValidSubmitAsync" >
        <MudTextField @bind-Value="InputModel.Title" Label="Title" 
            HelperText="Required field" For="@(()=>InputModel.Title)" />
        <MudTextField @bind-Value="InputModel.Description" Label="Description" 
            HelperText="Required field" For="@(()=>InputModel.Description)" />

        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
    </EditForm>
</MudPaper>